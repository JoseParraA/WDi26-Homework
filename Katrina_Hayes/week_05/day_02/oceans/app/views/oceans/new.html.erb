<h2>Add a new ocean or sea</h2>

<form action="/oceans" method="post">
  <label>Name:</label>
  <input type="text" name="ocean[name]" value="" placeholder="e.g. Indian">
  <label>Location:</label>
  <input type="text" name="ocean[location]" value="" placeholder="e.g. Between...">
  <label>Percentage of Earth's surface:</label>
  <input type="float" name="ocean[surface_percent]" value="" placeholder="e.g. 37">
  <label>Image:</label>
  <input type="url" name="ocean[image]" value="" placeholder="http://...">
  <button>Create</button>
</form>
