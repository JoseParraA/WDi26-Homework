<h2><%= @artist.name %></h2>
<h3>Website: <a href="<%= @artist.website %>" target="_blank"><%= @artist.website %></a></h3>

<% unless @artist.song.nil? %>
  <h3>
    Song:
    <a href="/songs/<%= @artist.song.id %>"><%= @artist.song.name %></a>
  </h3>
<% end %>

<% unless @artist.image.nil? || @artist.image.empty? %>
  <img class="feature" src="<%= @artist.image %>" alt="<%= @artist.name %>">
<% end %>

<div class="controls">
  <a href="/artists/<%= @artist.id %>/edit">Edit</a>
  <a href="/artists/<%= @artist.id %>/delete">Delete</a>
</div>
