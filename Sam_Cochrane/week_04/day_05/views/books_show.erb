<h2><%= @book['title'] %></h2>
<h3>Author: <%= @book['author'] %></h3>

<% unless @book.category.nil? %>
  <h3>
    Category:
    <a href="/books/<%= @book.category.id %>"><%= @book.category.name %></a>
  </h3>
<% end %>

<% unless @book['image'].nil? || @book['image'].empty? %>
  <img class="feature" src="<%= @book['image'] %>" alt="<%= @book['title'] %>">
<% end %>

<div class="controls">
  <a href="/books/<%= @book['id'] %>/edit">Edit</a>
  <a href="/books/<%= @book['id'] %>/delete">Delete</a>
</div>
